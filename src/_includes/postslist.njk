<div class="jlok-section">
  <ul class="jlok-column-container">
    {%- for post in postslist | reverse -%}
    <li class="jlok-card">
      <div class="jlok-card__content">
        <a href="{{ post.url }}" class="jlok-card__title">{{ post.data.title }}</a>
        <p>{{ post.data.description }}</p>
      </div>
    </li>
    {%- endfor -%}
  </ul>
</div>
